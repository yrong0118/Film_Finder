<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_to_row_vote"
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxWidth="340dp"
        android:background="@drawable/chat_from_sender"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageview_to_row_vote"
        app:layout_constraintTop_toTopOf="@+id/imageview_to_row_vote" />


    <TextView
        android:id="@+id/title_to_row_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="340dp"
        android:text="This is a Vote Request"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="@dimen/eight_dp"
        android:padding="@dimen/eight_dp"
        app:layout_constraintTop_toTopOf="@id/view_to_row_vote"
        app:layout_constraintLeft_toLeftOf="@id/view_to_row_vote"
        />

    <View
        android:id="@+id/delimiter_to_row_vote"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@id/view_to_row_vote"
        app:layout_constraintTop_toBottomOf="@id/title_to_row_vote" />


    <TextView
        android:id="@+id/text_from_row_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="340dp"
        android:text="Click to read the detal or vote!"
        android:textSize="15sp"
        android:layout_margin="@dimen/eight_dp"
        android:padding="@dimen/eight_dp"
        app:layout_constraintTop_toBottomOf="@id/delimiter_to_row_vote"
        app:layout_constraintLeft_toLeftOf="@id/view_to_row_vote"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_to_row_vote"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:civ_border_color="@android:color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />



</androidx.constraintlayout.widget.ConstraintLayout>